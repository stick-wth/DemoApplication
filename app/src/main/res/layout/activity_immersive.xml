<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:id="@+id/immersive_content"
    tools:context="com.stick.demoapplication.ImmersiveActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/immersive_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:title="toolBarTitle"
        />

    <Button
        android:id="@+id/btn_rel_immersive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="immersive_btnClick"
        android:text="沉浸式体验" />

    <Button
        android:id="@+id/btn_rel_immersive_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="immersive_btnClick"
        android:text="Exit沉浸式体验" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真正的沉浸式界面应该是全屏的，状态栏、标题栏（不存在的）和虚拟导航键都是隐藏的，只有在手动从屏幕上方或者下方呼出才会显示，并且过一段时间会自动隐藏。" />

    <Button
        android:id="@+id/btn_immersive_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="immersive_btnClick"
        android:text="沉浸式状态栏" />

    <Button
        android:id="@+id/btn_immersive_status_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="immersive_btnClick"
        android:text="Exit沉浸式状态栏" />
</LinearLayout>
